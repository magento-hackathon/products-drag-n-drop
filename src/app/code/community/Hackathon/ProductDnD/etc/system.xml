<config>
    <sections>
        <catalog>
            <groups>
                <dragndrop translate="label" module="hackathon_productdnd">
                    <label>Drag &amp; Drop functionality to sort products</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>260</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <active_backend translate="label">
                            <label>Activate in backend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active_backend>
                        <active_frontend translate="label">
                            <label>Activate in frontend</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active_frontend>
                        <allow_ips translate="label comment">
                            <label>Allowed IPs for frontend editing (comma separated)</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Leave empty for access from any location.</comment>
                        </allow_ips>
                    </fields>
                </dragndrop>
            </groups>
        </catalog>
    </sections>
</config>